<% include ../partials/header %>
<div class="form-page">
    <a class="back-button" href="/blogs/<%=blog_id%>">BACK</a>
    <div class="form-container">
        <form action="/blogs/<%= blog_id %>/blogComments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-title-container form-item">
                <h2>EDIT COMMENT</h2>
            </div>
            <!-- Need to change it so name="plant[genus]" for all -->
            <div class="form-item" style="width:350px; ">
                <input type="text" name="comment[comment]" placeholder="Comment" 
                    style="width:100%;height: 100px;" value="<%= comment.comment%>">
            </div>
            <input type="submit" name="submit" class="submit-button form-item">
        </form>
    </div>
</div>
<% include ../partials/footer %>